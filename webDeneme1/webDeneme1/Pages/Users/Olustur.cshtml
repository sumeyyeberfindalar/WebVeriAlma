@page
@model WebVeriAlma.Pages.Users.OlusturModel
@{
     Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="style.css">
</head>
<body>
    <br />


    @if (Model.errorMessage.Length > 0)
    {
        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
            <strong>@Model.errorMessage</strong>
            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
    }

    <div class="center">
        <h3> Yeni Kullanıcı</h3>
        <form method="POST">


            <div class="txt_field">
                <input type="text" class="form-control" name="nameSurname" value="@Model.userInfo.nameSurname" required>
                <label>İsim-Soyisim</label>
            </div>

            <div class="txt_field">

                <input type="email" class="form-control" name="email" value="@Model.userInfo.email" required>
                <label>Email</label>
            </div>

      <div class="txt_field">


                <input type="text" class="form-control" name="username" value="@Model.userInfo.username" required>
                <label>Kullanıcı Adı</label>
            </div>

            <div class="txt_field">

                <input type="password" class="form-control" name="password" value="@Model.userInfo.password" required>
                <label>Şifre</label>
            </div>

      

            @if (Model.successMessage.Length > 0)
            {
                <div class="row mb-3">
                    <div class="col-sm-9">
                        <div class='alert alert-success alert-dismissible fade show' role='alert'>
                            <strong>@Model.successMessage</strong>
                            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                        </div>
                    </div>
                </div>
            }



            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">

                    <button type="submit" class="btn btn-primary">Tamam</button>
                </div>

                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-primary" href="/Users/Kullanicilar" role="button">Kapat</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>